                        <% } %>

                    </div>
                </div>
            </div>

            <div class="frames">
                <div class="title-list-post">
                    <h6>Kiếm tiền online</h6>
                    <a href="/kiem-tien-online">Xem tất cả></a>
                </div>
                <div class="list-post">
                    <div class="wrapper">
                        <% for(let i=0;i<monneyPost.length;i++) { %>

                            <a href="/post/<%- monneyPost[i].title.split(' ').join('-') %>.<%- monneyPost[i]._id %>">
